<div class="d-flex justify-content-center align-items-cente">
  <span class="mr-3">總金額：</span>
  <h1 class="text-center total-amount" style="color:lightblue">{{total}}
  </h1>
</div>

<div class="d-flex justify-content-between mb-3">
  <a class="btn btn-outline-success" href="./records/new"><i class="far fa-plus-square"></i>新增支出</a>
  <div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      類別
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      {{#each category}}
      <a class="dropdown-item" href="/sort/{{this.name}}">{{this.name}}</a>
      {{/each}}
      <a class="dropdown-item" href="/">總表</a>
    </div>
  </div>
</div>

<ul class="list-group list-group-flush">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="row col-10 mr-auto ">
        <span class="col-1 align-items-center" style="font-size: 16px">{{{this.icon}}}</span>
        <div class="col-11 d-flex ml-0 align-items-center justify-content-between ">
          <h3>{{this.name}}</h3>
          <h3>{{this.amount}}</h3>
        </div>
        <br>
        <span class="col-1"></span>
        <span class="col-3">{{this.date}}</span>
      </div>
      <div class="col-auto mr-auto">
        <a class="btn btn-success" href="/records/{{ this._id }}/edit">修改</a>
        <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"
          onsubmit="return confirm('確定要刪除嗎？')">
          <button class="btn btn-danger" type="submit">刪除</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>